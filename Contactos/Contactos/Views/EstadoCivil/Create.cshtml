@model Contactos.Models.Tablas.TablasForaneas

@{
    ViewBag.Title = "Create";
}


<h2>Creación de Estado Civil</h2>

@using (Html.BeginForm("Create", "EstadoCivil", FormMethod.Post, new { @class = "tab-form" }))
{
    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(model => model.Nombre, "Nombre", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-8">
                @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <button class="btn btn-primary" type="submit">Guardar</button>
    </div>
}
